<%# views/partials/daily-quests.ejs %>
<div class="view-tabs"><h2>Daily Quests Tracker</h2></div>

<div class="daily-quests-selectors">
    <% for (let i = 0; i < 3; i++) { %>
        <div class="player-selector-group">
            <label>Player <%= i + 1 %>:</label>
            <div class="dq-player-selection-ui" data-index="<%= i %>">
                <div class="dq-player-name-display" id="dq-player-display-<%= i %>">-- Select Player --</div>
                <input type="hidden" class="dq-player-id-hidden" id="dq-player-id-hidden-<%= i %>" data-index="<%= i %>">
                <input type="hidden" class="dq-player-name-hidden" id="dq-player-name-hidden-<%= i %>">
                <button type="button" class="dq-open-modal-btn action-btn-main" data-index="<%= i %>">Select</button>
            </div>
        </div>
    <% } %>
</div>

<div id="daily-quests-container" class="daily-quests-container">
    <div class="dq-placeholder">Select up to 3 players to track their daily quests.</div>
</div>