<div class="card top-bar">
    <div class="top-bar-section timers-section">
       <ul class="timers-list">

    <li class="timer-entry">

            <span class="timer-label">Server Day</span>
               <span class="timer-value server-day"><%= timers.serverDay %></span>
           </li>
           <li class="timer-entry">
               <span class="timer-label">Daily Reset in</span>
               <span class="timer-value" data-milliseconds="<%=
timers.daily %>" data-type="daily"></span>

    </li>
           <li class="timer-entry">
               <span class="timer-label">Weekly Reset in</span>
               <span class="timer-value" data-milliseconds="<%= timers.weekly %>" data-type="weekly"></span>
           </li>
           <li class="timer-entry">

 <span class="timer-label <%= timers.isPaperPlaneImportant ?
'important-event' : '' %>">Paper Plane #<%= timers.paperPlaneNumber %> end in</span>
               <span class="timer-value" data-milliseconds="<%= timers.event %>" data-type="event"></span>
               <% if (timers.futurePaperPlanes && timers.futurePaperPlanes.length > 0) { %>
               <div class="timer-tooltip pp-tooltip">
                   <div class="tooltip-title">Upcoming Paper Planes in</div>


        <ul class="tooltip-list">
                       <% timers.futurePaperPlanes.forEach(pp => { %>
                           <li class="tooltip-item">

    <span class="timer-label <%= pp.isImportant ? 'important-event' : '' %>">PP#<%= pp.number %></span>

         <span class="timer-value" data-milliseconds="<%= pp.milliseconds %>" data-type="event"></span>
                           </li>

  <% }); %>
                   </ul>
               </div>
               <% } %>

       </li>
           <% if (timers.classChange) { %>
           <li class="timer-entry">

        <span class="timer-label"><%= timers.classChange.label %> in</span>
               <span class="timer-value" data-milliseconds="<%= timers.classChange.milliseconds %>" data-type="classChange"></span>
               <% if (timers.allClassChanges && timers.allClassChanges.length > 1) { %>

    <div class="timer-tooltip cc-tooltip">
                   <div class="tooltip-title">Upcoming Class Changes in</div>

              <ul class="tooltip-list">
                       <% timers.allClassChanges.forEach(cc => { %>
                           <% if
(cc.milliseconds > 0) { %>

  <li class="tooltip-item">
                               <span class="timer-label"><%= cc.label %></span>
                               <span class="timer-value" data-milliseconds="<%= cc.milliseconds %>" data-type="classChange"></span>

</li>

    <% } %>
                       <% });
%>
                   </ul>
               </div>
               <% } %>
           </li>
           <% } %>

            <% if (timers.levelCapTimers && timers.levelCapTimers.currentLevelCap) { %>

     <li class="timer-entry">
                 <span class="timer-label">
                     Lv.<%= timers.levelCapTimers.currentLevelCap.level %> Cap.
<% if (timers.levelCapTimers.nextLevelCap) { %>
                       Lv.<%= timers.levelCapTimers.nextLevelCap.level %> in:
                     <% } else { %>
                        (Final Cap)

 <% } %>
                 </span>
                 <% if (timers.levelCapTimers.nextLevelCap) { %>
                    <span class="timer-value" data-milliseconds="<%= timers.levelCapTimers.nextLevelCap.milliseconds %>" data-type="levelCap"></span>
                 <% } else { %>

       <span class="timer-value" data-milliseconds="0" data-type="levelCap">--</span>
                 <% } %>

                 <% if (timers.levelCapTimers.futureLevelCaps && timers.levelCapTimers.futureLevelCaps.length > 0) { %>
                 <div class="timer-tooltip lc-tooltip">
                     <div class="tooltip-title">Upcoming Level Caps in</div>

                   <ul class="tooltip-list">
                         <% timers.levelCapTimers.futureLevelCaps.forEach(lc => { %>
                             <li class="tooltip-item">

            <span class="timer-label">Lv.<%= lc.level %> (CC<%= lc.cc %>)</span>
                                 <span class="timer-value" data-milliseconds="<%= lc.milliseconds %>" data-type="levelCap"></span>
                             </li>

          <% });
%>
                     </ul>
                 </div>
                 <% } %>
            </li>
            <% } %>
            </ul>
   </div>
</div>